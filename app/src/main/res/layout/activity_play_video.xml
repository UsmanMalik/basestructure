<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/used">



    <com.teeku.christmas.utilities.DMWebVideoView
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:id="@+id/dmWebVideoView"
        android:configChanges="orientation|screenSize"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/play_video_title"
        android:text="This is a video tilte. Trying a longer text. yolo."
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/dmWebVideoView"
        android:paddingTop="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

    />
    <com.google.android.gms.ads.AdView

        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>